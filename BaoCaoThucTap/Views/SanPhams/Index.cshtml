@model IEnumerable<BaoCaoThucTap.Models.SanPham>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var dsanhsp = (List<string>)ViewBag.dsanh;
}
<center><h1>Danh sách sản phẩm</h1></center>
<p>
    <a asp-action="Create">Thêm sản phẩm mới</a>
</p>
<div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tensp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ngaynhap)
                </th>
                <th>
                    Ảnh đại diện
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.giasp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.motasp)
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 0;}
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tensp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngaynhap)
                </td>
                <td>
                    <img src="~/images/@dsanhsp[i]" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.giasp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.motasp)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.masp">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.masp">Chi tiết</a> |
                    <a asp-controller="SanPhams" asp-action="delete" asp-route-id="@item.masp"><i class="far fa-trash-alt"></i></a>
                </td>
                @{i++;}
            </tr>
                
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tensp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ngaynhap)
                </th>
                <th>
                    Ảnh đại diện
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.giasp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.motasp)
                </th>
                <th>Thao tác</th>
            </tr>
        </tfoot>
    </table>
</div>




