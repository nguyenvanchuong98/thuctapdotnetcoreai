@model BaoCaoThucTap.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
    var anhchitiet = (List<AnhSanPham>)ViewBag.lstanhsp;
}

<center><h1>Chi tiết sản phẩm: @Model.masp</h1></center>

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1">
                            <img src="~/images/@anhchitiet[0].urlAnh" asp-append-version="true" alt="">
                        </div>
                        @for (var i = 2; i <= anhchitiet.Count; i++)
                        {
                            <div class="tab-pane" id="pic-@i">
                                <img src="~/images/@anhchitiet[i-1].urlAnh" asp-append-version="true" alt="">
                            </div>
                        }
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab"><img src="~/images/@anhchitiet[0].urlAnh" asp-append-version="true" alt=""></a>
                        </li>
                        @for (var j = 2; j <= anhchitiet.Count; j++)
                        {
                            <li>
                                <a data-target="#pic-@j " data-toggle="tab"><img src="~/images/@anhchitiet[j-1].urlAnh" asp-append-version="true" alt=""></a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.tensp</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span> <span class="fa fa-star checked"></span> <span class="fa fa-star checked"></span> <span class="fa fa-star"></span> <span class="fa fa-star"></span>
                        </div> <span class="review-no">@Model.ngaynhap</span>
                    </div>
                    <p class="product-description">@Html.DisplayFor(model => model.motasp)</p>
                    <h4 class="price">Giá bán: @Model.giasp đ</h4>
                    <p class="vote">
                        <strong>91%</strong> of người mua hài lòng với sản phẩm này <strong>(87 bình chọn)</strong>
                    </p>
                    <h5 class="sizes">
                        Kích cỡ: <span class="size" data-toggle="tooltip" title="small">s</span> <span class="size" data-toggle="tooltip" title="medium">m</span> <span class="size" data-toggle="tooltip" title="large">l</span> <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                    </h5>
                    <h5 class="colors">
                        Màu: <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span> <span class="color green"></span> <span class="color blue"></span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.masp">Edit</a> |
    <a asp-action="Index">Trở lại danh sách</a>
</div>
